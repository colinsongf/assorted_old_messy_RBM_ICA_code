for ii in range(1,nAE+1):
    # layer - AE
    ll.append({'name':         'ae%d' % ii,
               'type':         'ae',
               'hiddenSize':   25,      # output size is same as hidden size
               'beta':         3.0,
               'rho':          .01,
               })

