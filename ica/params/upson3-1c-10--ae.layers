ll = []

ll.append({'name':      'data',
           'type':      'data',
           'dataClass': 'UpsonData3',   # provides 240x320 images
           'imageSize': (240,320),
           'patchSize': (8,8),          # not including colors
           'stride':    (4,4),
           'colors':    1,
           })

ll.append({'name':          'whitener',
           'type':          'whitener',
           'whitenerClass': 'PCAWhiteningLayer',
           'unitNorm':      True})

ll.append({'name':      'stretch',
           'type':      'stretch',
           'min':       .1,
           'max':       .9,
           })

